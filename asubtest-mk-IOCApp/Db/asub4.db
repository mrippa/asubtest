record(aSub,"$(user):asubtx") {
    field(LFLG,"IGNORE")
    field(EFLG,"ALWAYS")
    field(INAM,"init_my_asub")
    field(SNAM,"my_asubtx")
    field(NOA, "10")
    field(FTA, "LONG")
    field(FTVA, "LONG")
    field(OUTA, "sim3:asubrx CPP")
    field(FLNK, "lnx:asubrx.PROC")
}

record(aSub, "$(user):asubrx") {
    field(LFLG,"IGNORE")
    field(EFLG,"ALWAYS")
    field(INAM,"init_my_asub")
    field(SNAM,"my_asubrx")
    field(INPA, "sim3:asubtx.VALA CPP")
    field(NOA, "10")
    field(NOVA, "10")
    field(FTA, "LONG")
    field(FTVA, "LONG")
    field(FTVD, "DOUBLE")
    field(OUTC, "lnx:tdiff.A NPP")
    field(OUTD, "lnx:tdiff.B CPP")
}

record(aSub, "$(user):tdiff") {
    field(LFLG,"IGNORE")
    field(EFLG,"ON CHANGE")
    field(INAM,"")
    field(SNAM,"tdiff_proc")
    field(NOA, "1")
    field(NOVA, "1")
    field(NOB, "1")
    field(NOVB, "1")
    field(FTA, "DOUBLE")
    field(FTVA, "DOUBLE")
    field(FTB, "DOUBLE")
    field(FTVB, "DOUBLE")
}

#Count to 9, then back to 0.
record(calc, "$(user):calc") {
    field(DESC, "Counter")
    field(SCAN,"1 second")
    field(FLNK, "$(user):aiExample")
    field(CALC, "(A<B)?(A+C):D")
    field(INPA, "$(user):calc.VAL  NPP NMS")
    field(INPB, "9")
    field(INPC, "1")
    field(INPD, "0")
    field(EGU, "Counts")
    field(HOPR, "10")
    field(HIHI, "8")
    field(HIGH, "6")
    field(LOW, "4")
    field(LOLO, "2")
    field(HHSV, "MAJOR")
    field(HSV, "MINOR")
    field(LSV, "MINOR")
    field(LLSV, "MAJOR")
}

#Track the calc record 
record(ai, "$(user):aiExample")
{
    field(DESC, "Analog input")
    field(INP, "$(user):calc.VAL  NPP NMS")
    field(EGUF, "10")
    field(EGU, "Counts")
    field(HOPR, "10")
    field(LOPR, "0")
    field(HIHI, "8")
    field(HIGH, "6")
    field(LOW, "4")
    field(LOLO, "2")
    field(HHSV, "MAJOR")
    field(HSV, "MINOR")
    field(LSV, "MINOR")
    field(LLSV, "MAJOR")
}

#CB of ai record used to populate the array of asub
record(compress,"$(user):compressExample")
{
    field(DESC, "Circular buffer")
    field(INP,"$(user):asubrx.VALT PP NMS")
    field(ALG,"Circular Buffer")
    field(NSAM,"10")
    field(HOPR,"10")
    field(EGU,"Counts")
}


